<h3 class="font-weight-medium">Awards</h3>
<table class="table table-borderless">
  <tbody>
    {% for course in site.data.resume.courses %}
      <tr>
        <td class="text-center" style="width: 10%;">
          <span class="badge badge-primary" style="width: 100%; display: inline-block;">{{ course.category }}</span>
        </td>
        <td style="width: 90%; border-left: 2px solid #dee2e6;">
          <span class="ml-1">
            {{ course.courses | join: '; ' }}
          </span>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
