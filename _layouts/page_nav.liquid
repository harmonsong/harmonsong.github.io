---
layout: default
---

<div class="container">
  <div class="row">
    <!-- Left side navigation bar -->
    <div class="col-md-3">
      {% include 1-navbar.liquid %}
    </div>

    <!-- Main content -->
    <div class="col-md-9 post">
      <header class="post-header">
        <h1 class="post-title-pro">{{ page.title }}</h1>
        <p class="post-description">{{ page.description }}</p>
      </header>

      <article>
        {{ content }}
      </article>

      {% if page.cited_keys %}
        <h2>References</h2>
        <div class="publications">
          {% bibliography --cited_in_order --sort year page.cited_keys %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
